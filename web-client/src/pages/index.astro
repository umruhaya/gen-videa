---
import Layout from "@/layouts/Layout.astro";
import HeroParallax from "@/components/ui/hero-parallax.tsx";
import ModeToggle from "@/components/ModeToggle";

const names = [
    "aladdin.png",
    "beech-dancer.png",
    "elven-queen.png",
    "golden-oasis.png",
    "icy-blue.png",
    "star-wars.png",
    "astronaut.png",
    "futuristic-lab.png",
    "handsome-musketeer.png",
    "moana-disney.png",
    "techno-fantasy.png",
];

const prods = names.map(name => ({
    title: name,
    link: "#",
    thumbnail: `https://storage.googleapis.com/static-web-pages/library/${name}`
}))
---

<Layout title="Genvidea">
    <header class="p-4 flex bg-secondary">
        <ModeToggle client:load />
    </header>

    <main class="flex flex-col gap-8">
        <HeroParallax client:load products={prods} />
    </main>
</Layout>
