---
import Layout from "@/layouts/Layout.astro";
import HeroParallax from "@/components/ui/hero-parallax.tsx";
import Header from "@/components/Header";
import Globe from "@/components/Globe";

{/* This Astro component integrates a main layout using 'Layout' and displays a header, a parallax hero section populated dynamically with predefined product data, and a globe component loaded only on the client side. */}

const names = [
    "aladdin.png",
    "beech-dancer.png",
    "elven-queen.png",
    "golden-oasis.png",
    "icy-blue.png",
    "star-wars.png",
    "astronaut.png",
    "futuristic-lab.png",
    "handsome-musketeer.png",
    "moana-disney.png",
    "techno-fantasy.png",
];

const prods = names.map(name => ({
    title: name,
    link: "#",
    thumbnail: `https://storage.googleapis.com/static-web-pages/library/${name}`
}))
---

<Layout title="Genvidea">
    <Header isLoggedIn={false} client:load />

    <main class="flex flex-col gap-8">
        <HeroParallax client:load products={prods} />
        <Globe client:only />
    </main>
</Layout>
